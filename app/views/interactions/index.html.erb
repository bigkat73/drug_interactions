<div class="row" ng-app="Interactions">
  <div class="12 columns" ng-controller="MedicationsCtrl">
    <div class="large-4 columns">
      <div class="row collapse">
        <div class="small-9 columns">
          <input type="text" placeholder="medication">
        </div>
        <div class="small-3 columns">
          <a href="#" class="button prefix">Search</a>
        </div>
      </div>
      <div id="medications-list-container">
        <ul>
          <li ng-repeat="medication in medications | filter:query">
            <h3>{{medication.name}}</h3>
          </li>
        </ul>
      </div>
    </div>
    <div class="large-8 columns">
    </div>
  </div>
</div>
